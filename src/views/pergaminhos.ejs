<div id="pergaminhos">					
	<h3>Pergaminhos</h3>
	
	<ul>
		<% acoes.forEach(acao =>{ %>
			<% 
				var txt_acao = ''
				switch(acao.acao){
					case '1':
						txt_acao = "aldeão(ões) coletando recursos"
						break
					case '2':
						txt_acao = "enforcamento(s) programado"
						break
					case '3':
						txt_acao = "aldeão(ões) em treinamento de história"
						break
					case '4':
						txt_acao = "aldeão(ões) em treinamento de magia"
						break
				}

				const data = new Date()
				var dataAtual = data.getTime()

				var termino = Math.round((acao.termino - dataAtual) / 1000)

			%>
			<li><%= acao.quantidade %> <%= txt_acao %> - <small>restam <span class="txt_segundos"><%= termino %></span> segundos - <a href="/revogar_acao?id=<%= acao._id %>">revogar ordem</a></small></li>
		<% }) %>
	</ul>
</div>